<% content_for :title, "Editing friend" %>

<h1>Editing friend</h1>

<%= render "form", friend: @friend , submit_label: "Update Friend" %>

<br>

<div class="d-flex gap-2">
  <%= link_to "Show", @friend , class: 'btn btn-secondary' %>
  <%= button_to 'Delete', @friend, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger'%>
  <%= link_to "Back", friends_path , class: 'btn btn-dark' %>
</div>
