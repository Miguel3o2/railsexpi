<% content_for :title, "Friends" %>

<% if user_signed_in? %>
<div class="container-fluid py-5">
  <h1 class="display-5 fw-bold">Friends</h1>
  <p class="col-md-8 fs-4">Welcome to your friends management page. Here you can view, add, edit, and remove friends from your list.</p>
  <%= link_to 'Add New Friend', new_friend_path, class: 'btn btn-primary btn-lg' %>
</div>


<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>Instagram</th>
      
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user_id == current_user.id %>
      <tr>
        <td><%= link_to friend.first_name + " " + friend.last_name, friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.instagram %></td>
        
        

      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
<% else %>
  <h1>Hello!</h1>
  <p>Welcome to the friends app</p>
<% end %>
